<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".chatActivity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello Traveller"
            android:textSize="28sp"
            android:gravity="center"
            android:padding="10dp"
            android:fontFamily="@font/fontty"
            android:textColor="@color/bleck"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AI Will Suggest Some places for you to visit"
            android:textSize="18sp"
            android:fontFamily="@font/fontty"
            android:textColor="@color/bleck"
            android:gravity="center"
            />
        <EditText
            android:layout_margin="20dp"
            android:id="@+id/searchbar1"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/mainbut"
            android:hint="@string/whereto"
            android:drawableStart="@drawable/search"
            android:textAlignment="viewStart"
            android:paddingLeft="20dp"
            android:textColor="@color/bleck"
            />

        <Button
            android:layout_width="100dp"
            android:padding="10dp"
            android:drawableEnd="@drawable/send_horizontal"
            android:layout_height="wrap_content"
            android:text="Go"
            android:background="@drawable/backbutton"
            android:textColor="#fff"
            />
    </LinearLayout>
</LinearLayout>