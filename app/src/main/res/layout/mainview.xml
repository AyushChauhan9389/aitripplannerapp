<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/mainproductimage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/imageviewer"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/star"
                />
            <TextView
                android:id="@+id/rating"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.99"
                android:fontFamily="@font/fontty"
                android:textSize="16sp"
                android:textColor="@color/bleck"
                />
            <TextView
                android:id="@+id/numberofrating"
                android:textColor="@color/bleck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(78)"
                android:fontFamily="@font/fontty"
                android:textSize="16sp"
                />


        </LinearLayout>
        <TextView
            android:id="@+id/nameView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/entire_townhouse_5_beds"
            android:fontFamily="@font/fontty"
            android:textSize="22sp"
            android:textColor="@color/bleck"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/entire_townhousee"
                android:fontFamily="@font/fontty"
                android:textSize="16sp"
                android:textColor="@color/bleck"
                />
            <TextView
                android:id="@+id/pricerating"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rating"
                android:fontFamily="@font/fontty"
                android:textSize="16sp"
                android:textColor="@color/bleck"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/star"
                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>